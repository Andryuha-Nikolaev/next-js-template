{
  "name": "next-js-template",
  "version": "0.1.0",
  "private": true,
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "prettier": "npx prettier --write --ignore-unknown ./src",
    "prepare": "cd ../.. && husky .husky"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "next": "14.2.14",
    "nextjs-toploader": "^3.7.15",
    "prettier": "^3.3.3",
    "react": "^18",
    "react-dom": "^18",
    "simplebar-react": "^3.2.6"
  },
  "devDependencies": {
    "@msocial/eslint-config": "^0.2.1",
    "@msocial/prettier-config": "^0.2.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "eslint": "^8",
    "eslint-config-next": "14.2.14",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "sass": "^1.80.4",
    "typescript": "^5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --quiet --fix",
      "prettier --write --ignore-unknown"
    ],
    "*.{json,html}": [
      "prettier --write --ignore-unknown"
    ]
  }
}
